<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/pet_task_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:padding="4dp"
        android:layout_margin="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/task_checkbox"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/unchecked_checkmark"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/task_designee_pic"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/blank_person"
            android:visibility="visible"
            app:civ_border_width="1dp"
            app:civ_border_color="#E0E0E0"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/task_edit_text"
            android:layout_width="0dp"
            android:text="Create a new task ..."
            android:textColor="#212121"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:paddingEnd="4dp"
            android:paddingStart="2dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/corner_background"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/task_creator_pic"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:src="@drawable/profile_pic_dummy"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

</LinearLayout>